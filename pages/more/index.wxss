/* pages/nowplay/index.wxss */
.view_title{
  height: 100rpx;
  /* background: #ff0; */
  line-height: 120rpx;
  font-size: 50rpx;
  font-family: cursive;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
}
/* 内容 */
.content_list{
    width: 100%;
 
display: flex;
   flex-wrap: wrap;
   justify-content: space-around
}
.content_ul{
   height: 100%;
 
}
.content_list_imgview image{
    width: 100%;
  height: 380rpx;
  /* background:#000; */
  margin: 0;
}
.content_list_imgview{
  position: relative
}
.content_tags_r{
   width: 60rpx;
  height: 50rpx;
  background: rgb(241, 151, 54);
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 20rpx；
}
/* //查看更多列表 */
.content_li{
 width: 32%;
  height: 100%;
  /* background: skyblue; */
  display: flex;
  flex-direction: column;
   box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
   margin-bottom: 20rpx
}
.content_ti{
  font-size: 35rpx;
  text-align: center;
   width: 100%;


  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  margin-top: 20rpx
}
.content_desc{
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  margin-top: 20rpx
}
