/* pages/detail/detail.wxss */
.detail_view{
  width: 100%;
  height: 100%;
}
.bac_top{
  width: 100%;
  height: 350rpx;
}
.bac_view{
  width: 100%;
  height:350rpx;
  background: #000;
  opacity: 0.7;
  z-index: 9999;
      /* -webkit-mask: -webkit-linear-gradient(270deg,#000 0,#000 14em,rgba(0,0,0,0) 14em); */
